    public UnoCard.Color choseColor(UnoCard card) {
        if (card.getColor() == UnoCard.Color.Wild) {
            this.setVisible(true);
            this.setResizable(false);
            this.setBounds(100, 150, 600, 700);
            
        }
        return card.getColor();
    }

